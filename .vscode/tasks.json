    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build NES",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-I${workspaceFolder}/nes/include",
                "-I${workspaceFolder}/nes/vendor/imgui/include",
                "-I/usr/include",
                "${workspaceFolder}/nes/src/*.cpp",
                "${workspaceFolder}/nes/vendor/imgui/src/*.cpp",
                "-L/usr/lib/x86_64-linux-gnu/",
                "-lsfml-window",
                "-lsfml-graphics",
                "-lsfml-system",
                "-lGL",
                "-o",
                "'/mnt/c/Users/Darek/Desktop/VBox Shared/nes-emu.out'"
            ]
        }
    ]
}